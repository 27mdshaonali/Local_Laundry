    <!-- 🌞 Light Theme Colors -->

    <!-- Branding Colors -->
    <color name="colorPrimary">#2196F3</color> <!-- Fresh Blue for toolbar, buttons -->
    <color name="colorPrimaryVariant">#1976D2</color> <!-- Slightly darker variant -->
    <color name="colorAccent">#00BCD4</color> <!-- Soft Aqua for highlights -->

    <!-- Backgrounds -->
    <color name="colorBackground">#F5F5F5</color> <!-- Main app background -->
    <color name="colorSurface">#FFFFFF</color> <!-- Card or input background -->

    <!-- Text -->
    <color name="textPrimary">#212121</color> <!-- For main text -->
    <color name="textSecondary">#757575</color> <!-- For subtext, placeholders -->

    <!-- Status Indicators -->
    <color name="colorSuccess">#4CAF50</color> <!-- Paid, successful orders -->
    <color name="colorError">#D32F2F</color> <!-- Cancelled orders or errors -->

    <!-- Button text -->
    <color name="colorButtonText">#FFFFFF</color> <!-- Light text on colored buttons -->




    <!-- ✅ Primary button: Used for important actions like "Place Order", "Submit", "Pay Now" -->
    <color name="btn_primary">#4CAF50</color> <!-- Green -->

    <!-- 📘 Secondary button: Used for supportive actions like "Login", "View Orders", "Sign Up" -->
    <color name="btn_secondary">#03A9F4</color> <!-- Blue -->

    <!-- ❌ Cancel button: Used for destructive actions like "Cancel Order" -->
    <color name="btn_cancel">#F44336</color> <!-- Red -->

    <!-- 🚫 Disabled button: Used when a button should be inactive (e.g., empty input fields) -->
    <color name="btn_disabled">#BDBDBD</color> <!-- Gray -->

    <!-- 🆎 Button text: Always white to ensure readability on colored buttons -->
    <color name="btn_text">#FFFFFF</color> <!-- White -->

</resources>