<!-- res/layout/item_layout.xml -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="@dimen/_20sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/navUserImage"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"

            android:padding="@dimen/_4sdp"
            android:scaleType="fitXY"
            android:src="@drawable/shaon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_border_color="@color/btn_secondary"
            app:riv_border_width="@dimen/_2ssp"
            app:riv_corner_radius="@dimen/_50sdp"
            app:riv_mutate_background="true"
            app:riv_oval="true" />

        <TextView
            android:id="@+id/navUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="Md Shaon Ali"
            android:textAlignment="center"
            android:textColor="@color/appBarItemColor"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintEnd_toEndOf="@id/navUserImage"
            app:layout_constraintStart_toStartOf="@id/navUserImage"
            app:layout_constraintTop_toBottomOf="@id/navUserImage" />

        <TextView
            android:textIsSelectable="true"
            android:id="@+id/navUserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="mdshaonislam912@gmail.com"
            android:textAlignment="center"
            android:textColor="@color/appBarItemColor"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintEnd_toEndOf="@id/navUserName"
            app:layout_constraintStart_toStartOf="@id/navUserName"
            app:layout_constraintTop_toBottomOf="@id/navUserName" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
